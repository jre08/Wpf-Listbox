<Window xmlns:WPF="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication3"
        
        x:Class="MainWindow"
        mc:Ignorable="d"
        Title="Weather" Height="906.686" Width="1228.282" Loaded="Window_Loaded" WindowState="Maximized" Style="{DynamicResource MetroWindowStyle}" Icon="Resources/weatherIcon.ico">
    <Window.Resources>
        <DataTemplate x:Key="itemsList">
            <Border Margin="5" BorderBrush="White" BorderThickness="1">
                <StackPanel Margin="3,3,3,3" Width="270">


                    <DockPanel >

                        <TextBlock FontWeight="Bold" x:Name="Contactname" Text="{Binding ContactName}" 

        				DockPanel.Dock="Left" 

        				Margin="5,0,10,4" Foreground="White" FontFamily="Arial Black" FontSize="18.667"/>

                    </DockPanel>
                    <DockPanel HorizontalAlignment="Left" MaxWidth="250">

                        <Image x:Name="imgDayIcon" Source="{Binding imgDayIcon}" Stretch="Fill" Width="50" Height="50" />


                        <TextBlock x:Name="Address" TextWrapping="wrap" Text="{Binding Address}" Foreground="White" FontFamily="Arial Black" Margin="8,0,0,0" />

                    </DockPanel>
                    <DockPanel>
                        <TextBlock FontWeight="Bold" Text="Perciptation:" Foreground ="White"  

        				DockPanel.Dock="Left" 

        				Margin="5,0,5,0"/>

                    </DockPanel>

                </StackPanel>
            </Border>
        </DataTemplate>

    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="Resources/bg.jpg"/>
    </Window.Background>

    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Margin="10,193,0,0" x:Name="listBox1" ItemTemplate="{StaticResource itemsList}"  BorderThickness="2" Grid.Column="0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" IsSynchronizedWithCurrentItem="False" Background="{x:Null}" BorderBrush="White" ScrollViewer.VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Left" Width="305" Height="540" VerticalAlignment="Top" />
        <WPF:Map x:Name="wthrmap" CredentialsProvider="Aq2HnustT_KqzkcjJ-p0fMGrzYDh8BDD-lVqhy9c6nDmsQgIsGTghkNpM_IY6_PK" Margin="346,193,187,173"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,738,0,0" Width="305" Height="37" VerticalAlignment="Top"/>
        <TextBox x:Name="infobox" HorizontalAlignment="Left" Margin="10,780,0,0" TextWrapping="Wrap" Text="TextBox" Width="305" Height="86" VerticalAlignment="Top" SpellCheck.IsEnabled="True"/>
        

    </Grid>
</Window>
